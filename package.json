{
  "name": "human-resource-management",
  "version": "1.0.0",
  "description": "Human Resource Management",
  "main": "./api/index.js",
  "scripts": {
    "start": "node ./api/index.js",
    "server": "nodemon ./api/index.js",
    "client": "cd client && yarn start",
    "clientinstall": "yarn add --prefix client",
    "dev": "concurrently \"yarn server\" \"yarn client\"",
    "heroku-postbuild": "yarn add --prefix client && yarn build --prefix client"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ankithans/human-resource-management.git"
  },
  "author": "Ankit Hans",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ankithans/human-resource-management/issues"
  },
  "homepage": "https://github.com/ankithans/human-resource-management#readme",
  "devDependencies": {
    "concurrently": "^5.3.0",
    "nodemon": "^2.0.6"
  },
  "dependencies": {
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-validator": "^6.9.0",
    "mongoose": "^5.11.8",
    "morgan": "^1.10.0"
  }
}
